<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Exercicios"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="50dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textMeusExercicios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Meus Exercícios"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:textSize="20sp"
                android:textColorHint="#2D3B6E"
                android:textStyle="bold"/>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/textExercicio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Abdominal Canivete"
                android:layout_marginStart="15dp"
                android:textColorHint="#2D3B6E"
                android:textSize="16sp"/>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/textTreino"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Supino Máquina"
                android:layout_marginStart="15dp"
                android:textColorHint="#2D3B6E"
                android:textSize="16sp"/>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/buttonContinuar"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:hint="Cadastrar"
            android:textColorHint="@color/white"
            android:textSize="14sp"
            app:cornerRadius="10dp"
            app:backgroundTint="#2D3B6E"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="40dp"/>


    </androidx.cardview.widget.CardView>

</LinearLayout>